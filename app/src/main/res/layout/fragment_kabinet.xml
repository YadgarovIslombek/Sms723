<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activitys.StartActivity"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/nameProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/nameEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textCursorDrawable="@color/darkgrey"
            android:fontFamily="@font/proximanovaregular"
            app:met_floatingLabel="normal"
            android:hint="Ism"
            android:clickable="true"
            android:cursorVisible="false"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:inputType="text"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/emailProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/nameProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/emailEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            app:met_floatingLabel="normal"
            android:hint="Email pochta"
            android:textCursorDrawable="@color/darkgrey"
            android:inputType="text"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/parolProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/emailProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/parolEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            app:met_floatingLabel="normal"
            android:hint="Parol"
            android:drawableRight="@drawable/ic_baseline_edit_24"
            android:inputType="text"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:textCursorDrawable="@color/darkgrey"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/phoneProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/parolProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/phoneEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            app:met_floatingLabel="normal"
            android:hint="Telefon raqam"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:textCursorDrawable="@color/darkgrey"
            android:inputType="numberDecimal"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imeiProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"

        app:layout_constraintTop_toBottomOf="@id/phoneProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/imeiEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_info_24"
            android:background="@null"
            android:fontFamily="@font/proximanovaregular"
            app:met_floatingLabel="normal"
            android:hint="Telefon imei"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:textCursorDrawable="@color/darkgrey"
            android:inputType="text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/limitProfilLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/circularbordersolid"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/imeiProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/limitEd_pr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:drawableRight="@drawable/ic_baseline_info_24"
            android:fontFamily="@font/proximanovaregular"
            android:hint="Limit qoldig'i"

            android:inputType="text"
            android:textSize="14sp"
            app:met_floatingLabel="normal" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@drawable/circularbluebordersolid"
        android:fontFamily="@font/proximanovaregular"
        android:padding="16dp"

        android:text="Saqlash"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/limitProfilLL"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>














































