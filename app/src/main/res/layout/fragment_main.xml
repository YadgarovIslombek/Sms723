<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.fragments.MainFragment"
    >


  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_303sdp"
      android:background="@drawable/main_fragment_bg"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:id="@+id/cardView2"
      android:layout_width="@dimen/_65sdp"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginTop="@dimen/marginTop"
      android:layout_marginBottom="@dimen/_283sdp"
      android:background="@drawable/limit_bg"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

    <TextView
        android:id="@+id/limittxtGold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/_2sdp"
        android:fontFamily="@font/proximanovaregular"
        android:gravity="center"
        android:text="100000"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/ic_money_24" />
  </LinearLayout>

