<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/bg_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_22sdp"
            android:paddingTop="@dimen/_24sdp"
            android:paddingRight="@dimen/_22sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_18sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titletxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center"
                    android:text="Ro'yhatdan o'tish"
                    android:textColor="#3c4b5d"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/desctxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center"
                    android:text="Ro'yhatdan o'ting va ommaviy xabar yuborib \n biznesingizni barchaga bildirish imkoniyatiga\n ega bo'ling!"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/userinfo_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/namell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/circularbordersolid"
                    android:gravity="center"
                    android:padding="@dimen/_14sdp">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/proximanovaregular"
                        app:met_floatingLabel="normal"
                        android:hint="Ism"
                        android:inputType="text"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emailll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/circularbordersolid"
                    android:gravity="center"
                    android:padding="@dimen/_14sdp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/input_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        app:met_floatingLabel="normal"
                        android:fontFamily="@font/proximanovaregular"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/passwordll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/circularbordersolid"
                    android:gravity="center"
                    android:padding="@dimen/_14sdp">

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:fontFamily="@font/proximanovaregular"
                        app:met_floatingLabel="normal"
                        android:hint="Parol"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:background="@drawable/circularbordersolid"
                    android:id="@+id/phonenumberll"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/uzflaf"
                        android:layout_weight="0.1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/circularbordersolid"
                        android:padding="@dimen/_2sdp"
                        android:text="+998"
                        android:layout_weight="0"
                        android:textAlignment="center"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/_10sdp" />

                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/input_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefon raqam"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:maxLength="9"
                        android:layout_weight="0.8"
                        app:met_floatingLabel="normal"
                        android:background="@drawable/circularbordersolid"
                        android:inputType="phone" />
                </LinearLayout>
                <TextView
                    android:id="@+id/phonenumbertextll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:padding="@dimen/_3sdp"
                    android:fontFamily="@font/proximanovaregular"
                    android:textColor="@color/darkgrey"
                    android:text="Diqqat! Kiritilgan raqamga sms tasdiqlash kodi yuborishimiz mumkin."
                    android:textAlignment="center"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/circularbluebordersolid"
                    android:fontFamily="@font/proximanovaregular"
                    android:padding="@dimen/_8sdp"
                    android:text="Olg'a"
                    android:textColor="@color/white" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/link_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_22sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_8sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center"
                    android:text="Ro'yhatdan o'tganmisiz?"
                    android:textColor="#3c4b5d"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proximanovaregular"
                    android:gravity="center"
                    android:text=" Kirish"
                    android:textColor="#8e9cfe"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

        </LinearLayout>
        <ProgressBar
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/progressbarS"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="gone"/>
    </RelativeLayout>

</ScrollView>

